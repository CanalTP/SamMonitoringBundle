<?xml version="1.0" encoding="UTF-8"?>
<monitoring>
    <application name="{{ monitoring.name }}" state="{{ monitoring.state }}"></application>
    <categories>
        {% for itemCategory in monitoring.categories %}
            <category name="{{ itemCategory.name }}">
                {% for service in itemCategory.services %}
                    <service state="{{ service.state }}" name="{{ service.name }}" message="{{ service.message }}"/>
                {% endfor %}
            </category>
        {% endfor %}
    </categories>
</monitoring>